@model CRUD_Preguntas.Models.Preguntas

@{
    ViewData["Title"] = "Borrar Pregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white text-center"><strong>Borrar Pregunta</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Borrar">
                    <input type="hidden" asp-for="PreguntaID" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="TextoPregunta" class="col-sm-4 col-form-label text-right"></label>
                        <div class="col-sm-8">
                            <input asp-for="TextoPregunta" class="form-control" readonly />
                            <span asp-validation-for="TextoPregunta" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Correcta" class="col-sm-4 col-form-label text-right"></label>
                        <div class="col-sm-8">
                            <input asp-for="Correcta" class="form-control" readonly />
                            <span asp-validation-for="Correcta" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Incorrecta1" class="col-sm-4 col-form-label text-right"></label>
                        <div class="col-sm-8">
                            <input asp-for="Incorrecta1" class="form-control" readonly />
                            <span asp-validation-for="Incorrecta1" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Incorrecta2" class="col-sm-4 col-form-label text-right"></label>
                        <div class="col-sm-8">
                            <input asp-for="Incorrecta2" class="form-control" readonly />
                            <span asp-validation-for="Incorrecta2" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Incorrecta3" class="col-sm-4 col-form-label text-right"></label>
                        <div class="col-sm-8">
                            <input asp-for="Incorrecta3" class="form-control" readonly />
                            <span asp-validation-for="Incorrecta3" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mt-3 text-center">
                        <button type="submit" class="btn btn-custom"><i class="fa fa-trash" aria-hidden="true"></i> Borrar Pregunta</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-custom {
        background-color: #c9ada7;
        color: #000;
        cursor: pointer;
        margin-top: 10px;
        margin-right: 5px;
    }

        .btn-custom:hover {
            background-color: #ac8178;
            color: #000;
        }

    .card {
        margin-bottom: 20px;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-header {
        background-color: #343a40;
        color: #c9ada7;
        font-weight: bold;
    }

    .card-body {
        background-color: #333333;
        color: #c9ada7;
        font-weight: normal;
        padding: 20px;
    }

    .form-control {
        background-color: #d9d9d9;
        color: #000;
        border: 1px solid #ac8178;
    }

        .form-control:focus {
            background-color: #d9d9d9;
            color: #000;
            border-color: #ac8178;
            box-shadow: none;
        }

    body {
        background-color: #d9d9d9;
        color: #000;
    }

    a.btn-secondary {
        background-color: #343a40;
        color: #c9ada7;
        border-color: #343a40;
    }

        a.btn-secondary:hover {
            background-color: #ac8178;
            color: #000;
            border-color: #ac8178;
        }

    .col-form-label {
        color: #c9ada7;
    }

    .form-group.row {
        margin-bottom: 1rem;
    }
</style>
